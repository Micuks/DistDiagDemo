{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "FastAPI Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host=0.0.0.0",
                "--port=8001",
                "--reload"
            ],
            "jinja": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}/backend"
        },
        {
            "name": "Test Model Split",
            "type": "debugpy",
            "request": "launch",
            "module": "tests.test_model_split",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "TRAINING_TEST_MODE": "true"
            },
            "cwd": "${workspaceFolder}/backend"
        }
    ]
}
